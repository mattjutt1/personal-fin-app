# Personal Finance App - Backend Environment Variables Template  
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# === DATABASE CONFIGURATION ===
# PostgreSQL connection (when you add database later)
# DATABASE_URL=postgresql://username:password@localhost:5432/personal_finance_db

# === AI MODEL CONFIGURATION ===
# Kaggle API for fine-tuned model inference
KAGGLE_USERNAME=your-kaggle-username
KAGGLE_KEY=your-kaggle-api-key

# Fine-tuned model identifiers on Kaggle
FINMA_7B_NLP_MODEL=your-kaggle-username/finma-7b-nlp-model
FINMA_7B_FULL_MODEL=your-kaggle-username/finma-7b-full-model
FINGPT_V32_MODEL=your-kaggle-username/fingpt-v32-model
MISTRAL_7B_MODEL=your-kaggle-username/mistral-7b-model

# === EXTERNAL API CONFIGURATION ===
# Bank connection APIs (when you add them later)
# PLAID_CLIENT_ID=your-plaid-client-id
# PLAID_SECRET=your-plaid-secret-key
# PLAID_ENVIRONMENT=sandbox  # sandbox, development, or production

# Market data APIs (optional)
# ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
# FINNHUB_API_KEY=your-finnhub-key

# === SECURITY CONFIGURATION ===
# JWT secret for token signing (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# === DEVELOPMENT SETTINGS ===
# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Server configuration  
PORT=8000
HOST=localhost

# CORS settings
CORS_ORIGIN=http://localhost:3000

# === CACHE CONFIGURATION ===
# Redis (when you add caching later)
# REDIS_URL=redis://localhost:6379

# === MONITORING (OPTIONAL) ===
# Application monitoring
# SENTRY_DSN=your-sentry-dsn
# NEWRELIC_LICENSE_KEY=your-newrelic-key

# === EMAIL CONFIGURATION (OPTIONAL) ===
# For notifications and alerts
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password

# === CLOUD STORAGE (OPTIONAL) ===
# For file uploads and document storage
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name